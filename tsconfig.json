{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": true,
    "lib": ["es6", "dom", "ES2016", "ES2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
